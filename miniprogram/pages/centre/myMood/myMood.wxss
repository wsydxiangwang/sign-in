
.content{
  padding: 30rpx 0;
}
.item{
  background: #fff;
  box-shadow: 0 0 15px #dedede;
  padding: 30rpx;
  border-radius: 8px;
  margin-bottom: 25rpx;
}
.mood-head{
  height: 75rpx;
}
.mood-head .avatar{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.mood-head .avatar image{
  width: 100%;
  height: 100%;
}
.mood-head .title{
  height: 75rpx;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  padding-left: 20rpx;
}
.mood-head .title .user-name{
  font-size: 26rpx;
}
.mood-head .title .name{
  font-size: 30rpx;
}
.mood-head .title .time{
  font-size: 24rpx;
  color: #666;
}

.content{
  padding: 25rpx 0;
}
.content text{
  font-size: 26rpx;
  color: #333;
}
.content .image-list{
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.content .image-list .image-item{
  background: #f5f5f5;
  box-sizing: border-box;
  margin: 4rpx;
  font-size: 0;
  border-radius: 8rpx;
  overflow: hidden;
}
.content .image-list.one .image-item{
  width: 100%;
}
.content .image-list.one .image-item image{
  width: 100%;
  height: 360rpx;
}
.content .image-list.two .image-item{
  width: 202rpx;
  height: 202rpx; 
}

.content .image-list.two .image-item image{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}


.mood-foot{
  display: flex;
  justify-content: space-between;
  padding: 18rpx 0 0;
  border-top: 1px solid #f5f5f5;
}
