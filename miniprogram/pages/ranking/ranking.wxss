page, .container{
  height: 100%;
  background: #22b5ff;
}
.ranking-tab{
  background: #22b5ff;
  display: flex;
  justify-content: space-evenly;
  height: 30px;
  line-height: 30px;
}
.ranking-tab .swiper-tab-item{
  color: #fff;
  font-size: 26rpx;
  position: relative;
}
.ranking-tab .swiper-tab-item.active::after{
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  display: inline-block;
  height: 4rpx;
  width: 50rpx;
  border-radius: 20px;
  transform: translateX(-50%);
  background: #fff;
}

.ranking-list .ranking-item{
  overflow: hidden;
  box-sizing: border-box;
  background: #22b5ff;
}

.ranking-list .ranking-item .header{
  color: #fff;
  position: absolute;
  top: 120rpx;
  width: 100%;
  padding: 0 5%;
}
.header .item{
  width: 30%;
  display: inline-block;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.header .item .title{
  font-size: 26rpx;
  margin-top: 22rpx;
}
.header .item .title .tit{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  display: block;
  width: 100%;
}
.header .item .bottom{
  margin-top: 90rpx;
}
.header .item .time{
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.header .item .like{
  position: relative;
}
.header .item .like.done .iconfont{
  color: red;
}
.header .item .like.done .num{
  color: #fff;
}

.header .item .like .iconfont{
  color: #fff;
}
.header .item .like .num{
  color: #22b5ff;
}
.header .item .image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: auto;
}
.header .item .image image{
  height: 100%;
  width: 100%;
}
.header .item:nth-of-type(2){
  transform: translateY(-70rpx)
}


.ranking-list .ranking-item .other{
  background: #fff;
  padding: 30rpx 0;
}
.ranking-list .ranking-item .other-box{
  height: 100%;
  padding: 0 30rpx;
  overflow-y: auto;
}

.other .item{
  display: flex;
  align-items: center;
  color: #999;
  border-bottom: 1px solid #f6f7f8;
  padding: 20rpx 0;
}
.other .item .rank{
  width: 50rpx;
  font-size: 34rpx;
  text-align: center;
  font-style: italic;
  margin-right: 25rpx;
}

.other .item .info{
  flex: 1;
  width: 0;
  height: 75rpx;
}
.other .item .info .image{
  height: 75rpx;
  width: 75rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  overflow: hidden;
  float: left;
}
.other .item .info .image image{
  height: 76rpx;
  width: 76rpx;
}

.other .item .info .title{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  
}
.other .item .info .title .tit{
  font-size: 28rpx;
  color: #333;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.other .item .right{
  display: flex;
  align-items: center;
}
.other .item .right .time{
  font-size: 28rpx;
  margin-right: 20rpx;
  color: transparent;
  overflow: hidden;
  background: linear-gradient(to right, #22b5ff, red);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
}

.item .like{
  text-align: center;
  position: relative;
}
.item .like.done .iconfont{
  color: red;
}
.item .like .iconfont{
  font-size: 50rpx;
  color: #ccc;  
}
.item .like .num{
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-60%);
  font-size: 20rpx;
  color: #fff;
}




.other .item .count{
  width: 80rpx;
  font-size: 24rpx;
  text-align: right;
}
.other .item .count text:first-child{
  font-size: 34rpx;
}

.rankingBg{
  display: block;
  width: 100%;
  height: 270rpx;
  margin-top: 200rpx;
}