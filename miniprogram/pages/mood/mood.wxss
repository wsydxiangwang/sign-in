page{
  background: rgb(248,250,251);
}
.container{
  padding-bottom: 30rpx;
}

.header{
  background: #22b5ff;
}
.header image{
  width: 100%;
  display: block;
}
.mood-title{
  padding: 20rpx;
  font-size: 24rpx;
  background: #fff;
  margin-bottom: 10rpx;
  color: #317db9;
  border-bottom: 1px solid #f6f7f8;
  text-align: center;
}
.publish{
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 10px;
  background: #22b5ff;
}


.mood-item{
  background: #fff;
  padding: 30rpx 40rpx 25rpx;
  margin-bottom: 20rpx;
  border-radius: 4px;
}
.mood-head{
  height: 75rpx;
}
.mood-head .avatar{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.mood-head .avatar image{
  width: 100%;
  height: 100%;
}
.mood-head .title{
  height: 75rpx;
  display: flex;
  justify-content: space-evenly;
  flex-direction: column;
  padding-left: 20rpx;
}
.mood-head .title .user-name{
  font-size: 26rpx;
}
.mood-head .title .name{
  font-size: 28rpx;
  color: #317db9;
  font-weight: 600;
}
.mood-head .title .time{
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
  display: flex;
  height: 20px;
  line-height: 20px;
}
.mood-head .title .time .iconfont{
  font-size: 28rpx;
  margin-right: 6rpx;
  display: flex;
}

.content{
  padding: 25rpx 0;
}
.content text{
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color: #333;
}
.content .image-list{
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.content .image-list .image-item{
  background: #f5f5f5;
  box-sizing: border-box;
  margin: 4rpx;
  font-size: 0;
  border-radius: 15rpx;
  overflow: hidden;
}
.content .image-list.one .image-item{
  width: 100%;
}
.content .image-list.one .image-item image{
  width: 100%;
  height: 360rpx;
}
.content .image-list.two .image-item{
  width: 202rpx;
  height: 202rpx; 
}

.content .image-list.two .image-item image{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.content .address{
  font-size: 24rpx; 
  color: #00aaff;
  margin-top: 10rpx;
}
.content .address .iconfont{
  margin-right: 10rpx;
}



.mood-foot{
  display: flex;
  justify-content: space-between
}
.mood-foot .foot-btn{
  font-size: 24rpx;
  color: #bbb;
  display: flex;
}
.mood-foot .like{
  margin-right: 10px;
}
.mood-foot .like.done .iconfont{
  color: red;
} 
/* 
.mood-foot .comment .iconfont{
  color: #00aaff;
} */
.mood-foot .plane .iconfont{
  font-weight: 600;
  font-size: 40rpx;
  color: #bbb;
}


.comment-list{
  padding: 15rpx 10rpx;
  margin-top: 28rpx;
  border-radius: 5px;
  background: #f6f7f8;
}
.comment-item{
  display: flex;
  padding: 14rpx 12rpx;
  border-radius: 5px;
}
.comment-item.hover{
  background: #eee;
}
.comment-avatar{
  width: 60rpx;
  height: 60rpx;  
  border-radius: 50%;
  overflow: hidden;
  margin-right: 18rpx;
}
.comment-avatar image{
  width: 100%;
  height: 100%;
}
.comment-flex{
  flex: 1;
}
.comment-flex .comment-name{
  color: #317db9;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.comment-flex .comment-name .time{
  font-size: 20rpx;
  color: #999;
}
.comment-flex .comment-content{
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
  color: #333;
  word-break: break-all;
}
.comment-flex .comment-content .reply{
  color: #317db9;
  margin-right: 8rpx;
}

