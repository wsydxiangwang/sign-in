/* 查看图片 */
.swiper{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-box{
  height: 100%;
  width: 100%;
  text-align: center;
}
.swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper-item image{
  width: 98%;
}

.dots{
  position: absolute;
  bottom: 20px;
  left: 0;
  right: 0;
  text-align: center;
}
.dots .dot{
  width: 12rpx;
  height: 12rpx;
  margin: 0 6rpx;
  border-radius: 50%;
  background: #444;
  display: inline-block;
  transition: all .3s;
}
.dots .dot.active{
  background: #ddd;
}